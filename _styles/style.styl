//====================
// import
// ===================
@import ("smart-grid.styl");
@import ("settings.styl");
//====================
// global
// ===================
body
	font-family 'Maven Pro', sans-serif;
//====================
// code
// ===================

.main
	color: #fff
	display flex
	flex-direction column
	justify-content space-between
	align-items center
	height 100vh
	min-height 600px
	background url("../_img/main-bg.png") no-repeat center
	background-size: cover
	position relative

.main-overlay
	position absolute
	left 0
	top 0
	height: 100%
	width 100%
	opacity: 0.8
	z-index: 0
	background-image: linear-gradient( 150deg, rgb(136,211,206) 0%, rgb(110,69,226) 100%);

.header
	display flex
	justify-content space-between
	align-items center
	height: 10vh
	width 90%
	position relative
	z-index: 2

.menu
	col()
	col-12()
	row-flex()
	height 100%
	align-items center
	justify-content flex-end
	position: relative

.menu-link
	color: #fff;
	padding 0 15px
	md(padding, 0 5px)
	transition .3s;
	&:hover
		color: #8DEBFF

.get-started-btn
	color: #fff;
	margin-left: 70px
	md(margin-left, 20px)
	md(padding, 10px 20px)
	border: 1px solid #fff;
	padding 10px 20px;
	text-transform uppercase;
	border-radius 100px;
	transition .3s;
	position relative
	&:hover
		background-color: #FFF
		color: #000
	&:active
		top 1px

.lowResMenu
	position absolute
	display none
	col()
	col-10()
	justify-content flex-end
	img
		cursor: pointer



.main-text
	display flex
	flex-direction column
	justify-content center
	align-items center
	position relative
	z-index: 2
	text-align center
	h1
		margin .5rem
		font-size: 70px
	span
		display inline-block
		&:after
			content ""
			width 20px
			height 1px
			background-color: #FFF
			display inline-block
			vertical-align middle
			margin-left 10px
		&:before
			content ""
			width 20px
			height 1px
			background-color: #FFF
			display inline-block
			vertical-align middle
			margin-right 10px

.main-arrow
	width 50px
	height 50px
	background-color: #FFF
	z-index 2
	margin-bottom 50px
	border-radius 50%
	position relative
	display flex
	justify-content center
	align-items center
	box-shadow 0 0 18.7px 2.3px rgba(204,204,223, .5)
	&:before
		content "\2B07"
		color: #000
		font-size: 17px
		font-weight bold

.firstSection 
	background-color: #FFF

.wrapper
	max-width 1500px
	min-height 1100px
	margin 0 auto !important
	display flex
	flex-flow column wrap;
	align-items center
	text-align center
	col();
	.sectionOne__text
		h1
			margin 10px 0
		p
			margin 25px 0
		color: #000;
		font-family Maven Pro;
		max-width 420px
		margin-top 100px
		.firstText
			font-size: 25px
			display inline-block
			&:after
				content ""
				width 20px
				height 1px
				background-color: #6e45e2
				display inline-block
				vertical-align middle
				margin-left 10px
			&:before
				content ""
				width 20px
				height 1px
				background-color: #6e45e2
				display inline-block
				vertical-align middle
				margin-right 10px
		h1
			font-size: 60px
			color: #4f4f6f;
		p
			font-size: 16px
			line-height: 28px
			color: #c0c0c0;

.container
	display flex
	md(flex-direction,column)
	justify-content-md(center)
	align-items-md(center)
	.features
		row-flex()
		col-4()
		col-md-8()
		col-xs-12()
		lg(padding, 50px)
		margin 10px 25px
		border 1px solid #d7dbe8
		min-height 650px
		justify-content center
		padding 70px
		border-radius 40px
		transition .4s;
		&:hover
			 box-shadow: 0px 0px 81.88px 10.12px rgba(204, 204, 223, 0.71);
		.logo
			height: 50%
			lg(height, 40%)
			margin-top 20px
			&__text
				padding 30px 0
				text-transform uppercase
				color: #9fa4af;
				font-size: 16px
				font-family Maven Pro;
				font-weight bold
			&__price
				color: #4f4f6f;
				font-size: 20px
				font-family Maven Pro;
				font-weight bold
				span
					font-size 50px
				sup
					vertical-align super
					font-size: 100%
					font-weight 300
		.info
			color: #b7bbc3;
			font-size: 16px;
			font-family Maven Pro;
			line-height 28px
		.button
			display flex
			align-items center
			margin-top 50px
			text-transform uppercase
			padding 10px 50px
			border 1px solid #d7dbe8
			color: #d1d7e4
			font-size: 12px
			line-height 30px
			border-radius 30px
			font-weight bold
			cursor: pointer
			transition .4s;
			sm(padding, 20px 30px)
			&:hover
				background-color: #6e45e2;


.secondSection
	background url("../_img/background.png") no-repeat center
	background-size: cover
	display flex
	height 100vh
	min-height 520px
	position relative
	z-index 1
.secondContainer
			width 100%;
			display flex
			col()
			color: #fff
			font-family Maven Pro
			justify-content center
			align-items center
			flex-flow column nowrap
			height 100%
			text-align center
			.text
				font-size: 16px
				line-height 32px
				font-weight: bold
				text-transform uppercase
			.h1
				font-size: 60px
				line-height 72px
				letter-spacing -3.1px;
				font-weight 500
			.buttons
				display flex
				justify-content center
				align-items center
				sm(flex-direction, column)
				.button
					cursor: pointer
					text-transform uppercase
					font-size: 12px
					font-weight: bold
					color: #d1d7e4
					background-color: #FFF
					padding 20px 50px
					border-radius 30px
					z-index: 5
					max-width 190px
					margin 25px 10px
					transition .3s;
					sm(margin, 10px)
					&:last-child
						padding 20px 25px
					&:hover
						background-color: #6e45e2
						color: #fff;

footer
	width 100%
	background-color: #fff
	min-height 205px
	display flex
	flex-wrap wrap
	justify-content center
	.footbar
		.fLogo
			col()
			col-lg-12()
			lg(margin-top, 10px)
			display flex
			justify-content center
			align-items center
			color: #37374a;
			font-size: 30px;
			text-transform uppercase
			line-height 29px
			img
				margin-right 10px
		max-width: 1840px
		width 100%
		row-flex()
		justify-content space-between
		min-height 130px
		height: 100%
		align-items center
		border-bottom 1px solid #f2f2f3
		ul
			display flex
			flex-wrap wrap;
			col-lg-12()
			col-md-12()
			justify-content-lg(space-around)
			md(flex-direction, column)
			md(align-items, center)
			li
				md(margin, 10px)
				a
					padding 15px 30px
					lg(padding, 15px)
					font-size: 16px
					line-height 19px
					font-weight 500
					color: #6a6a77
					transition .3s;
					border-radius 30px
					&:hover
						background-color: #6e45e2
						color: #fff;
					.home
						color: #6e45e2
						&:hover
							color: #fff;

.footFooter
	row-flex()
	justify-content space-between
	width: 100%;
	align-items center
	height: 100%
	max-width 1840px
	padding 0 10px
	.fText
		font-size: 20px
		font-weight 500
		xxs(font-size, 12px)
		xxs(margin-right, 5px)
		col()
	.socials
		display: flex;
		xxs(padding, 0)
		col()
		li
			margin 0 5px
			a
				color: #c0c0c0;
				&:hover
					color: #7FE5FF - 40%





@media (max-width: 710px)
	.menu
		display none;
	.lowResMenu
		col()
		display flex
		justify-content flex-end
		flex-flow column nowrap
		align-items flex-end
		z-index: 10
		img
			max-width 64px
			max-height: 64px
		.subMenu
			display none
			position absolute
			padding 0
			margin 0
			top 50px
			right: -5px
			li
				padding 5px 15px
				background-color: #A7EDFF
				border-radius 5px
				border-bottom 1px sold #000
				transition .3s;
				&:hover
					background-color: #A7EDFF - 50%
				a
					color: #000
					font-family Maven Pro
					font-weight 400
	.scrollTop
		right 10px
		bottom 50px

.scrollTop
	height 40px
	width 40px
	box-shadow:inset 0px 1px 3px 0px #91b8b3;
	background:-webkit-gradient(linear, left top, left bottom, color-stop(0.05, #768d87), color-stop(1, #6c7c7c));
	position fixed
	right: 20px
	bottom 20px
	border-radius 50%;
	opacity: .5;
	transition .3s;
	cursor: pointer
	z-index 20
	&:before
		content "	\21E7"
		position absolute
		top 2px
		left 11px
		font-size: 30px
		color: #000
	&:hover
		opacity: 1





